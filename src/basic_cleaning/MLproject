name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: sample.csv
        type: string

      output_artifact:
        description: clean_sample.csv
        type: string

      output_type:
        description: Pandas dataframe
        type: string

      output_description:
        description: Dataframe after price column cap/collar and converting last_review to datetime
        type: string

      min_price:
        description: Minimum allowed price in the dataset
        type: string

      max_price:
        description: Maximum allowed price in the dataset
        type: string


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
